<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Interview" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <!-- Custom style for TextInputLayout with outlined box and exposed dropdown menu -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Customize border color -->
        <item name="boxStrokeColor">@drawable/dropdown_boxstrokecolor</item>
        <item name="boxStrokeWidth">2dp</item>
        <!-- Customize hint text color -->
        <item name="hintTextColor">@color/ComingUpRoses</item>
        <item name="android:textColorHint">@color/ComingUpRoses</item>
        <!-- Customize dropdown menu styles -->
        <item name="popupTheme">@style/CustomPopupTheme</item>
    </style>

    <!-- Custom style for the popup theme -->
    <style name="CustomPopupTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Customize dropdown menu text color -->
        <item name="android:textColor">@color/ComingUpRoses</item>
        <!-- Customize dropdown menu background color -->
        <item name="android:background">@color/ComingUpRoses</item>
        <!-- Set custom drawable for the dropdown arrow -->
        <item name="android:popupBackground">@drawable/dropdown_background</item>
    </style>

    <style name="CustomTextInputLayoutStyle2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Customize border color -->
        <item name="boxStrokeColor">@drawable/dropdown_boxstrokecolor2</item>
        <item name="boxStrokeWidth">2dp</item>
        <!-- Customize hint text color -->
        <item name="hintTextColor">@color/DeepPurple</item>
        <item name="android:textColorHint">@color/DeepPurple</item>
        <!-- Customize dropdown menu styles -->
        <item name="popupTheme">@style/CustomPopupTheme2</item>
    </style>

    <!-- Custom style for the popup theme -->
    <style name="CustomPopupTheme2" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Customize dropdown menu text color -->
        <item name="android:textColor">@color/DeepPurple</item>
        <!-- Customize dropdown menu background color -->
        <item name="android:background">@color/DeepPurple</item>
        <!-- Set custom drawable for the dropdown arrow -->
        <item name="android:popupBackground">@drawable/dropdown_background2</item>
    </style>

    <!-- Custom TimePickerDialog Theme -->
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/ComingUpRoses</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DialogButtonStyled</item>
    </style>


    <!-- Custom DatePickerDialog Theme -->
    <style name="CustomTimePickerDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/ComingUpRoses</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DialogButtonStyled</item>

    </style>

    <style name="DialogButtonStyled" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/ComingUpRoses</item>
    </style>



    <style name="Widget.App.Slider" parent="Widget.Material3.Slider.Legacy">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/LavenderTonic</item>
        <item name="colorOnPrimary">@color/DeepPurple</item>
        <item name="colorOnSurface">@color/ComingUpRoses</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.Material3.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/LavenderTonic</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/DeepPurple</item>
        <item name="fontFamily">@font/nunito_black</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/nunito_black</item>
    </style>


    <style name="Theme.Interview" parent="Base.Theme.Interview" />
</resources>